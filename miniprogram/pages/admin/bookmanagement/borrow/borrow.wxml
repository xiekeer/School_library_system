<!--pages/admin/bookmanagement/borrow/borrow.wxml-->
<form bindsubmit="borrowBook">
  <view class="cu-form-group margin-top">
		<view class="title">图书证号</view>
		<input value='{{readerid}}' name='readerid'></input>
    <text class="cuIcon-scan" bindtap='scanCodeReader'></text>
	</view>
  <view class="cu-form-group">
		<view class="title">书籍编号</view>
		<input value='{{bookid}}' name='bookid'></input>
    <text class="cuIcon-scan" bindtap='scanCodeBook'></text>
	</view>

  <view class="padding flex flex-direction">
        <button class="cu-btn bg-blue lg" form-type="submit">确定</button>
  </view>
</form>

